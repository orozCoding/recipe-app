<div id="<%= recipe.id %>" class="recipe-ctn d-flex">
  <div class="recipe-leftcol-ctn d-flex col">
    <div>
      <%= link_to "#{recipe.name}", recipe_path(recipe), method: :get %>
    </div>
    <div class="d-flex">
      <strong>By:</strong>
      <p><%= recipe.user.name %></p>
    </div>
  </div>
  <div class="recipe-rightcol-ctn d-flex col">
    <div>
      <strong>Total food items:</strong>
      <p><%= recipe.total_food_items %></p>
      <strong>Total price:</strong>
      <p><%= recipe.total_price %></p>
    </div>
    <p>
      <%= link_to "Show this recipe", recipe %>
    </p>
  </div>
</div>
